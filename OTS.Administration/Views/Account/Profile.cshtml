@model OTS.Administration.Models.Auth.ProfileModel

@{
    Layout = "_AuthLayout";
}

<form asp-action="Profile" asp-controller="Account">
    <div class="form-group">
        <label>Логин <span style="color:red" asp-validation-for="Login"></span></label>
        <input type="text" asp-for="Login" class="form-control" readonly="readonly" />
    </div>
    <div class="form-group">
        <label>Имя<span style="color:red" asp-validation-for="Name"></span></label>
        <input type="text" asp-for="Name" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Фамилия<span style="color:red" asp-validation-for="Surname"></span></label>
        <input type="text" asp-for="Surname" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Электронная почта <span style="color:red" asp-validation-for="Email"></span></label>
        <input type="text" asp-for="Email" class="form-control"/>
    </div>

    <button type="submit" class="btn btn-lg btn-primary" >Сохранить</button>
    <a type="button" class="btn btn-lg btn-secondary" asp-action="Index" asp-controller="Home" >К началу</a>
</form>


<h2 class="h4 mb-3 font-weight-normal" style="margin-top: 32px; text-align: center;">Мои билеты</h2>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Название</th>
        <th>Дата</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Events)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.IssueDate</td>
            <td><a asp-action="ItemService" asp-controller="Event" asp-route-id="@item.Id">Подробнее...</a></td>
            <td><a asp-action="Get" asp-controller="Ticket" asp-route-id="@item.Id">Показать билет</a></td>
        </tr>
    }
    </tbody>
</table>
